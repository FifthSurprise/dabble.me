%nav.navbar.navbar-default.navbar-fixed-top{ role: 'navigation' }
  .container
    .navbar-header
      %button.navbar-toggle{ type: 'button', data: { toggle: 'collapse', target: '.navbar-collapse' } }
        %span.sr-only= t('.toggle_navigation')
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Dabble Me", root_path, class: 'navbar-brand'
    .collapse.navbar-collapse
    
      %ul.nav.navbar-nav
        - if user_signed_in?
          %li{:class=>"#{'active' if current_page?(entries_path)}"}
            =link_to "All Entries", entries_path

          %li{:class=>"#{'active' if current_page?(new_entry_path)}"}
            =link_to "New Entry", new_entry_path

          -if current_user.entries.count > 0
            %li{:class=>"#{'active' if current_page?(random_entry_path)}"}
              =link_to "Random Entry", random_entry_path      

          %li{:class=>"#{'active' if current_page?(import_entries_path)}"}
            =link_to "Import OhLife", import_entries_path

      %ul.nav.navbar-nav.navbar-right

        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %strong= current_user.full_name_or_email
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li= link_to 'Edit profile', edit_user_registration_path
              %li.divider
              %li= link_to "Logout", destroy_user_session_path, method: :delete

        - else
          %li= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'
          %li= link_to "Login", new_user_session_path, :class => 'navbar-link'