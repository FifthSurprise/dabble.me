- title "Edit Entry on #{date_formatted(@entry)}"

.row
  %br
  .col-md-8.col-md-offset-2.well

    .s-entry-date
      -if @entry.inspiration.present?
        .float-left.s-edit-entry{:rel=>"popover", :title=>"#{@entry.inspiration.inspired_by}", :"data-content"=>"#{@entry.inspiration.body}"}
          %i.fa.fa-lightbulb-o
      .float-right.s-edit-entry{:rel=>"tooltip", :title=>"Delete this Entry"}
        = link_to entry_path(@entry), class: "s-delete", method: :delete, data: { confirm: 'Are you sure you want to delete this entry? There is no undo.' } do
          %i.fa.fa-trash
      %h2= @entry.date.strftime("%B %-d, %Y")
      %h3
        %span
          = @entry.date.strftime("%A")

    = form_for :entry, url: entry_path(@entry), method: :patch do |f|

      -if @entry.errors.any?
        #error_explanation.col-md-12
          .alert.alert-danger
            - @entry.errors.full_messages.each do |msg|
              %p= msg

      .col-md-12
        = f.label :date
        .input-group.date
          %span.input-group-addon
            %i.fa.fa-calendar
          = f.text_field :date, :value =>  date_formatted(@entry), :placeholder=>"YYYY-MM-DD", :class => "form-control"
        %br

      -#
        .col-md-12
          = f.label :image_url
          = f.text_field :image_url, :class => "form-control", :placeholder => "http://url-to-your-image"
          %br

      .col-md-12
        = f.label :entry
        = f.text_area :entry, :class => "form-control summernote", :rows => 20
        %br

      .col-md-12
        = f.submit "Edit Entry", :class => "form-control btn btn-primary"